{
  "parserOptions": {
    // Required for certain syntax usages
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "env": {
    "node": true,
    "es6": true,
    "mocha": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "rules": {
    "indent": [
      "error",
      2,
      {
        "VariableDeclarator": {
          "let": 2,
          "const": 3
        }
      }
    ],
    "no-label-var": "error",
    "no-var": "error",
    "no-new-object": "error",
    "object-shorthand": 1,
    "quote-props": [
      "error",
      "as-needed"
    ],
    "no-array-constructor": "error",
    "prefer-template": "error",
    "template-curly-spacing": [
      "error",
      "never"
    ],
    "no-useless-escape": "error",
    "no-eval": "error",
    "no-trailing-spaces": "error",
    "key-spacing": [
      2,
      {
        "singleLine": {
          "beforeColon": false,
          "afterColon": true
        },
        "multiLine": {
          "beforeColon": true,
          "afterColon": true,
          "align": "colon"
        }
      }
    ]
  }
}